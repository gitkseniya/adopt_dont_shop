<h1>New Application</h1>

<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
<br>
  <%= f.label :street_address %>
  <%= f.text_field :street_address %>
<br>
  <%= f.label :city %>
  <%= f.text_field :city %>
<br>
  <%= f.label :state %>
  <%= f.text_field :state %>
<br>
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>

  <% f.text_field :cover_letter, value: " " %>
  <% f.select :status, value: "In Progress" %>
<br>
  <%= f.submit "Submit" %>
<% end %>
