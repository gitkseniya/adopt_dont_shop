<div class="centering">


<h1>Edit Pet</h1>
<%= form_tag("/pets/#{@pet.id}", method: :patch) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @pet.name %><br>

  <%= label_tag :breed %>
  <%= text_field_tag :breed, @pet.breed %><br>

  <%= label_tag :adoptable %>
  <%= check_box_tag :adoptable %><br>

  <%= label_tag :age %>
  <%= number_field_tag :age, @pet.age %><br>

  <button type="submit" class="btn btn-primary">Save</button>

<% end %>

</div>
