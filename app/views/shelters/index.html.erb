<div class="centering">
<h1>All Shelters</h1>

<%= link_to "Sort by number of pets", "/shelters?sort=pet_count" %>

<%= form_with url: "/shelters", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>

<% @shelters.each do |shelter| %>
  <div id="shelter-<%= shelter.id %>">
    <h3><%= shelter.name %></h3>
    <p>Created at: <%= shelter.created_at %></p>
    <%= link_to "Update #{shelter.name}", "/shelters/#{shelter.id}/edit", class: "btn btn-info" %>
    <%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to remove #{shelter.name}?"}%>
  </div>
<% end %>
</div>
